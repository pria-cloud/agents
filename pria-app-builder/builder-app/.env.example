# PRIA App Builder Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development
NODE_ENV=development

# Supabase Configuration (REQUIRED)
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Additional Supabase Database URLs (auto-generated by Supabase)
POSTGRES_URL=your_postgres_connection_string
POSTGRES_URL_NON_POOLING=your_postgres_direct_connection_string
POSTGRES_USER=postgres
POSTGRES_HOST=your_supabase_db_host
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_DATABASE=postgres
POSTGRES_PRISMA_URL=your_prisma_connection_string
SUPABASE_JWT_SECRET=your_jwt_secret

# Claude API (REQUIRED)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key

# E2B Configuration (REQUIRED for sandbox functionality)
# Get your API key from https://e2b.dev/
E2B_API_KEY=your_e2b_api_key

# GitHub Integration (Optional - for repository management)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret

# Additional Configuration (Optional)
VERCEL_TOKEN=your_vercel_token_for_deployment